{
  "manifest_version": 3,
  "name": "WhatsApp Web Joker",
  "version": "1.0.2",
  "description": "Simply post a random joke and entertain your friends",
  "icons": {
    "16": "img/joker16.png",
    "64": "img/joker64.png",
    "128": "img/joker128.png"
  },
  "content_scripts": [
    {
      "js": [
        "joker.js"
      ],
      "matches": [
        "https://web.whatsapp.com/"
      ]
    }
  ],
  "host_permissions": [
    "https://web.whatsapp.com/"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "img/joker.svg"
      ],
      "matches": [
        "https://web.whatsapp.com/*"
      ]
    }
  ]
}
